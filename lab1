/* èñïîëüçóÿ ðàäèóñ ñôåðû è ñâîþ êîíñòàíòó âû÷èñëèòü:
 1. îáúåì ñôåðû
 2. ïëîùàäü ñôåðû */

#include <iostream>
#include <locale>
#include <cmath>
#include <limits>
#include <typeinfo>
using namespace std;


int main()
{
    setlocale(LC_ALL, "Russian"); 
    const float n = 13.1415; // òèï äàííûõ äëÿ äðîáíîé êîíñòàíòû
    int r;
    cout << "Ââåäèòå ðàäèóñ: ";
    cin >> r;
    float v = (4 * n * pow(r, 3)) / 3;
    float s = 4 * n * pow(r, 2);
    cout << "Îáúåì = " << v<< " " << typeid(v).name() << endl;
    cout << "Ïëîùàäü = " << s << " " << typeid(v).name() << endl;
    cout << "Ìèíèíàëüíîå çíà÷åíèå int: " << numeric_limits<int>::min()<<endl;
    cout << "Ìèíèíàëüíîå çíà÷åíèå float: " << - numeric_limits<float>::max() << endl;
    cout << "Ìàêñèìàëüíîå çíà÷åíèå int: " << numeric_limits<int>::max() << endl;
    cout << "Ìàêñèìàëüíîå çíà÷åíèå float: " << numeric_limits<float>::max() << endl;
    cout << "Ðàçìåð int â áèòàõ " << sizeof(int) * 8<< endl;
    cout << "Ðàçìåð float â áèòàõ " << sizeof(float) * 8 << endl;

    return 0;
}
